        </svg>
      </a>
    </div>
  </div>

  <!-- Article Content -->
  <div class="prose-content">
    <slot />
  </div>

  <!-- Article Tags -->
  {post.data.tags && post.data.tags.length > 0 && (
    <div class="mt-8 pt-6 border-t border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-3">Tags:</h3>
      <div class="flex flex-wrap gap-2">
        {post.data.tags.map((tag) => (
          <a 
            href={`/search?q=${encodeURIComponent(tag)}`}
            class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-gray-200 transition-colors"
          >
            #{tag}
          </a>
        ))}
      </div>
    </div>
  )}

  <!-- Related Articles -->
  {post.data.tags && post.data.tags.length > 0 && (
    <div class="mt-12 pt-8 border-t border-gray-200">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">Related Articles</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- This would be populated with actual related articles -->
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-gray-600 text-sm">Related articles will be displayed here based on tags and categories.</p>
        </div>
      </div>
    </div>
  )}
</article>

