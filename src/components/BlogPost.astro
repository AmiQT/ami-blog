---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
  content: any;
}

const { post, content } = Astro.props;

// Calculate reading time
const wordCount = content.body ? content.body.split(' ').length : 0;
const readingTime = Math.ceil(wordCount / 200); // Average reading speed

// Generate social sharing URLs
const currentUrl = new URL(Astro.url.pathname, Astro.url.origin).href;
const encodedUrl = encodeURIComponent(currentUrl);
const encodedTitle = encodeURIComponent(post.data.title);
const encodedDescription = encodeURIComponent(post.data.description);

const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  reddit: `https://reddit.com/submit?url=${encodedUrl}&title=${encodedTitle}`
};
---

<article class="prose prose-lg max-w-none">
  <!-- Article Meta -->
  <div class="flex items-center justify-between mb-8 pb-6 border-b border-gray-200">
    <div class="flex items-center space-x-4 text-sm text-gray-600">
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        {readingTime} min read
      </span>
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        {post.data.pubDate.toLocaleDateString()}
      </span>
      {post.data.author && (
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          {post.data.author}
        </span>
      )}
    </div>

    <!-- Social Sharing -->
    <div class="flex items-center space-x-2">
      <span class="text-sm text-gray-600 mr-2">Share:</span>
      <a 
        href={shareUrls.twitter} 
        target="_blank" 
        rel="noopener noreferrer"
        data-share="twitter"
        class="text-gray-400 hover:text-blue-400 transition-colors"
        title="Share on Twitter"
