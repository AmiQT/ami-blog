---
export interface Props {
  post: any;
  content: any;
}

const { post, content } = Astro.props;

// Calculate reading time (average 200 words per minute)
const wordCount = content.body ? content.body.split(' ').length : 0;
const readingTime = Math.ceil(wordCount / 200);

// Format date
const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Get related posts (same tags)
const { getCollection } = await import('astro:content');
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug && p.data.tags.some(tag => post.data.tags.includes(tag)))
  .slice(0, 3)
  .map(p => ({
    ...p,
    body: p.body || ''
  }));
---

<article class="max-w-4xl mx-auto">
  <!-- Article Header -->
  <header class="mb-16">
    <!-- Meta Information -->
    <div class="flex items-center text-sm text-gray-500 mb-8">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <time datetime={post.data.pubDate.toISOString()}>
          {formattedDate}
        </time>
      </div>
      <span class="mx-4 text-gray-300">•</span>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{readingTime} min read</span>
      </div>
      {post.data.updatedDate && (
        <>
          <span class="mx-4 text-gray-300">•</span>
          <span class="text-blue-600 font-medium">Updated: {post.data.updatedDate.toLocaleDateString()}</span>
        </>
      )}
    </div>

    <!-- Title -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-10 leading-tight">
      {post.data.title}
    </h1>

    <!-- Description -->
    <p class="text-xl md:text-2xl text-gray-600 mb-10 leading-relaxed font-light">
      {post.data.description}
    </p>

    <!-- Tags -->
    {post.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-3 mb-10">
        {post.data.tags.map((tag: string) => (
          <span class="bg-gradient-to-r from-blue-50 to-purple-50 text-blue-700 px-4 py-2 rounded-full text-sm font-medium border border-blue-200 hover:from-blue-100 hover:to-purple-100 transition-all duration-200">
            #{tag}
          </span>
        ))}
      </div>
    )}

    <!-- Author Info -->
    <div class="bg-gradient-to-r from-gray-50 to-blue-50 p-8 rounded-xl border border-gray-100">
      <div class="flex items-center">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold text-xl mr-6 shadow-lg">
          AI
        </div>
        <div>
          <div class="font-bold text-gray-900 text-lg mb-2">AI Review Team</div>
          <div class="text-gray-600 mb-2">Expert AI Analysts & Researchers</div>
          <div class="text-sm text-gray-500">Comprehensive analysis and unbiased reviews</div>
        </div>
      </div>
    </div>
  </header>

  <!-- Article Content -->
  <div class="prose prose-xl max-w-none mb-20">
    <slot />
  </div>

  <!-- Social Sharing -->
  <div class="bg-gradient-to-r from-gray-50 to-blue-50 border border-gray-200 rounded-xl p-8 mb-16">
    <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
      <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
      </svg>
      Share this article
    </h3>
    <div class="flex flex-wrap gap-4">
      <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`} 
         target="_blank" 
         rel="noopener noreferrer"
         class="flex items-center px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-all duration-200 transform hover:scale-105 shadow-md">
        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
        </svg>
        Share on Twitter
      </a>
      <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`} 
         target="_blank" 
         rel="noopener noreferrer"
         class="flex items-center px-6 py-3 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-all duration-200 transform hover:scale-105 shadow-md">
        <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        Share on LinkedIn
      </a>
      <button onclick="navigator.clipboard.writeText(window.location.href)" 
              class="flex items-center px-6 py-3 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-all duration-200 transform hover:scale-105 shadow-md">
        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
        Copy Link
      </button>
    </div>
  </div>

  <!-- Related Articles -->
  {relatedPosts.length > 0 && (
    <div class="border-t border-gray-200 pt-16">
      <h3 class="text-3xl font-bold text-gray-900 mb-10 flex items-center">
        <svg class="w-8 h-8 mr-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
        </svg>
        Related Articles
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {relatedPosts.map((relatedPost) => (
          <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100">
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-4">
                <time datetime={relatedPost.data.pubDate.toISOString()}>
                  {relatedPost.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </time>
                <span class="mx-2">•</span>
                <span>{Math.ceil((relatedPost.body || '').split(' ').length / 200)} min read</span>
              </div>
              
              <h4 class="text-lg font-bold mb-3 text-gray-900 line-clamp-2 hover:text-blue-600 transition-colors">
                <a href={`/blog/${relatedPost.slug}`}>
                  {relatedPost.data.title}
                </a>
              </h4>
              
              <p class="text-gray-600 mb-4 line-clamp-3 text-sm leading-relaxed">
                {relatedPost.data.description}
              </p>
              
              <div class="flex justify-between items-center">
                <a href={`/blog/${relatedPost.slug}`} class="text-blue-600 hover:text-blue-800 font-semibold transition-colors text-sm">
                  Read More →
                </a>
                <div class="flex flex-wrap gap-1">
                  {relatedPost.data.tags.slice(0, 2).map((tag) => (
                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  )}
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Professional Content Typography & Structure */
  .prose {
    color: #374151;
    font-size: 1.25rem;
    line-height: 1.9;
    max-width: 65ch;
    margin: 0 auto;
  }
  
  /* Headings with proper hierarchy and spacing */
  .prose h1 {
    color: #111827;
    font-size: 3rem;
    font-weight: 800;
    margin-top: 4rem;
    margin-bottom: 2rem;
    line-height: 1.1;
    letter-spacing: -0.025em;
  }
  
  .prose h2 {
    color: #111827;
    font-size: 2.25rem;
    font-weight: 700;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    letter-spacing: -0.025em;
    border-bottom: 3px solid #e5e7eb;
    padding-bottom: 0.75rem;
  }
  
  .prose h3 {
    color: #111827;
    font-size: 1.75rem;
    font-weight: 600;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    line-height: 1.3;
    letter-spacing: -0.025em;
  }
  
  .prose h4 {
    color: #111827;
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }
  
  .prose h5 {
    color: #111827;
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }
  
  .prose h6 {
    color: #111827;
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }
  
  /* Paragraphs with optimal spacing */
  .prose p {
    margin-bottom: 2rem;
    line-height: 1.9;
    color: #4b5563;
    font-size: 1.125rem;
  }
  
  /* Lists with proper spacing and styling */
  .prose ul, .prose ol {
    margin-bottom: 2rem;
    padding-left: 2.5rem;
  }
  
  .prose li {
    margin-bottom: 1rem;
    line-height: 1.8;
    color: #4b5563;
  }
  
  .prose ul li {
    list-style-type: disc;
    color: #4b5563;
    position: relative;
  }
  
  .prose ol li {
    list-style-type: decimal;
    color: #4b5563;
    position: relative;
  }
  
  /* Enhanced blockquotes */
  .prose blockquote {
    border-left: 5px solid #3b82f6;
    padding: 2rem 3rem;
    margin: 3rem 0;
    font-style: italic;
    color: #6b7280;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border-radius: 0 1rem 1rem 0;
    font-size: 1.25rem;
    line-height: 1.7;
    position: relative;
  }
  
  .prose blockquote::before {
    content: '"';
    font-size: 4rem;
    color: #3b82f6;
    position: absolute;
    top: -1rem;
    left: 1rem;
    font-family: serif;
  }
  
  /* Code styling */
  .prose code {
    background-color: #f3f4f6;
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    color: #dc2626;
    font-weight: 500;
    border: 1px solid #e5e7eb;
  }
  
  .prose pre {
    background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
    color: #f9fafb;
    padding: 2rem;
    border-radius: 1rem;
    overflow-x: auto;
    margin: 3rem 0;
    border: 1px solid #4b5563;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
  }
  
  .prose pre code {
    background: transparent;
    padding: 0;
    color: inherit;
    font-weight: normal;
    border: none;
  }
  
  /* Text emphasis */
  .prose strong {
    font-weight: 700;
    color: #111827;
  }
  
  .prose em {
    font-style: italic;
    color: #6b7280;
  }
  
  /* Links */
  .prose a {
    color: #3b82f6;
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 3px;
    transition: all 0.2s ease;
    font-weight: 500;
  }
  
  .prose a:hover {
    color: #2563eb;
    text-decoration-thickness: 3px;
  }
  
  /* Tables */
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 3rem 0;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
  }
  
  .prose th {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    padding: 1.25rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .prose td {
    padding: 1.25rem;
    border-bottom: 1px solid #e5e7eb;
    background-color: white;
    color: #4b5563;
  }
  
  .prose tr:nth-child(even) td {
    background-color: #f9fafb;
  }
  
  .prose tr:hover td {
    background-color: #f3f4f6;
  }
  
  /* Images */
  .prose img {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
    margin: 3rem 0;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
  }
  
  /* Horizontal rules */
  .prose hr {
    border: none;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, #e5e7eb 50%, transparent 100%);
    margin: 4rem 0;
  }
  
  /* Definition lists */
  .prose dl {
    margin: 2rem 0;
  }
  
  .prose dt {
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.5rem;
  }
  
  .prose dd {
    margin-bottom: 1.5rem;
    color: #4b5563;
    padding-left: 1rem;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .prose {
      font-size: 1.125rem;
      line-height: 1.8;
    }
    
    .prose h1 {
      font-size: 2.5rem;
    }
    
    .prose h2 {
      font-size: 2rem;
    }
    
    .prose h3 {
      font-size: 1.5rem;
    }
    
    .prose blockquote {
      padding: 1.5rem 2rem;
      font-size: 1.125rem;
    }
    
    .prose pre {
      padding: 1.5rem;
    }
  }
  
  /* Print styles */
  @media print {
    .prose {
      font-size: 12pt;
      line-height: 1.6;
    }
    
    .prose h1, .prose h2, .prose h3 {
      page-break-after: avoid;
    }
    
    .prose p, .prose blockquote {
      page-break-inside: avoid;
    }
  }
</style>
