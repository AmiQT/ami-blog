---
export interface Props {
  items: Array<{
    label: string;
    href?: string;
  }>;
}

const { items } = Astro.props;
---

<nav class="flex items-center space-x-3 text-sm text-gray-600 mb-8 p-4 bg-gray-50 rounded-lg" aria-label="Breadcrumb">
  {items.map((item, index) => (
    <>
      {index > 0 && (
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      )}
      {item.href ? (
        <a href={item.href} class="hover:text-blue-600 transition-colors font-medium">
          {item.label}
        </a>
      ) : (
        <span class="text-gray-900 font-bold">{item.label}</span>
      )}
    </>
  ))}
</nav>
