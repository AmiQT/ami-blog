---
export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  showPremium?: boolean;
}

const { 
  id = "subscription-modal",
  title = "Get Exclusive AI Insights",
  subtitle = "Join 10,000+ professionals getting weekly AI tool reviews and exclusive insights",
  showPremium = false
} = Astro.props;
---

<div id={id} class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
  <div class="bg-white rounded-xl max-w-md w-full p-8 relative">
    <!-- Close Button -->
    <button onclick="closeModal()" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Header -->
    <div class="text-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">{title}</h2>
      <p class="text-gray-600">{subtitle}</p>
    </div>

    <!-- Free Newsletter Signup -->
    <div class="mb-6">
      <form id="newsletter-form" class="space-y-4">
        <div>
          <input 
            type="email" 
            id="email-input"
            placeholder="Enter your email address"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
            required
          >
        </div>
        <button 
          type="submit"
          class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 transition-colors"
        >
          Get Free Updates
        </button>
      </form>
      <p class="text-xs text-gray-500 mt-3 text-center">
        No spam, unsubscribe anytime. We respect your privacy.
      </p>
    </div>

    <!-- Premium Features (if enabled) -->
    {showPremium && (
      <div class="border-t border-gray-200 pt-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 text-center">Upgrade to Premium</h3>
        <div class="space-y-3 mb-6">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm text-gray-700">Exclusive in-depth AI tool reviews</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm text-gray-700">AI tool comparison matrix</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm text-gray-700">Early access to new tools</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-sm text-gray-700">Personalized recommendations</span>
          </div>
        </div>
        <a 
          href="/premium"
          class="block w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white py-3 px-6 rounded-lg font-medium text-center hover:from-purple-700 hover:to-blue-700 transition-all"
        >
          Start Premium Trial - $9.99/month
        </a>
        <p class="text-xs text-gray-500 mt-2 text-center">
          7-day free trial, cancel anytime
        </p>
      </div>
    )}

    <!-- Social Proof -->
    <div class="border-t border-gray-200 pt-6 mt-6">
      <div class="flex items-center justify-center space-x-4 text-sm text-gray-500">
        <div class="flex items-center">
          <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span>4.9/5 rating</span>
        </div>
        <div class="flex items-center">
          <svg class="w-4 h-4 text-blue-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
          </svg>
          <span>10K+ subscribers</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function closeModal() {
    const modal = document.getElementById('{id}');
    modal.classList.add('hidden');
  }

  // Newsletter form submission
  document.getElementById('newsletter-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    const email = document.getElementById('email-input').value;
    
    // Here you would typically send this to your email service
    console.log('Newsletter signup:', email);
    
    // Show success message
    alert('Thank you for subscribing! Check your email for confirmation.');
    closeModal();
  });

  // Close modal when clicking outside
  document.getElementById('{id}')?.addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });
</script>
