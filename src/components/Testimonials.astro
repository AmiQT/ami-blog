---
export interface Testimonial {
  name: string;
  role: string;
  company: string;
  content: string;
  avatar?: string;
  rating: number;
}

const testimonials: Testimonial[] = [
  {
    name: "Sarah Chen",
    role: "Product Manager",
    company: "TechCorp",
    content: "This site has been invaluable for our AI tool selection process. The detailed reviews and comparisons helped us make informed decisions that saved us thousands of dollars.",
    rating: 5
  },
  {
    name: "Marcus Rodriguez",
    role: "Content Creator",
    company: "Digital Media Studio",
    content: "As someone who uses AI tools daily, I appreciate the depth and honesty of these reviews. It's refreshing to find unbiased analysis in the AI space.",
    rating: 5
  },
  {
    name: "Dr. Emily Watson",
    role: "AI Researcher",
    company: "University of Technology",
    content: "The technical accuracy and practical insights in these reviews are exceptional. This is now my go-to resource for AI tool recommendations.",
    rating: 5
  },
  {
    name: "Alex Thompson",
    role: "Startup Founder",
    company: "InnovateLab",
    content: "Found exactly what we needed to scale our AI operations. The pricing comparisons and feature breakdowns were incredibly helpful.",
    rating: 5
  },
  {
    name: "Lisa Park",
    role: "Marketing Director",
    company: "Growth Agency",
    content: "The search functionality and category filtering make it easy to find relevant tools. The quality of content is consistently high.",
    rating: 5
  },
  {
    name: "David Kim",
    role: "Software Engineer",
    company: "Tech Startup",
    content: "Finally, a site that doesn't just list features but actually tests and compares AI tools. The real-world use cases are particularly valuable.",
    rating: 5
  }
];
---

<section class="py-16 bg-gradient-to-br from-gray-50 to-blue-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Trusted by AI Professionals
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        See what industry experts and professionals are saying about our comprehensive AI tool reviews and insights.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
          <!-- Rating -->
          <div class="flex items-center mb-4">
            {Array.from({ length: testimonial.rating }, (_, i) => (
              <svg key={i} class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
              </svg>
            ))}
          </div>

          <!-- Content -->
          <blockquote class="text-gray-700 mb-6 italic">
            "{testimonial.content}"
          </blockquote>

          <!-- Author -->
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-lg mr-4">
              {testimonial.name.split(' ').map(n => n[0]).join('')}
            </div>
            <div>
              <div class="font-semibold text-gray-900">{testimonial.name}</div>
              <div class="text-sm text-gray-600">{testimonial.role} at {testimonial.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats Section -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
      <div>
        <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2">500+</div>
        <div class="text-gray-600">Happy Readers</div>
      </div>
      <div>
        <div class="text-3xl md:text-4xl font-bold text-purple-600 mb-2">4.9/5</div>
        <div class="text-gray-600">Average Rating</div>
      </div>
      <div>
        <div class="text-3xl md:text-4xl font-bold text-green-600 mb-2">50+</div>
        <div class="text-gray-600">AI Tools Analyzed</div>
      </div>
      <div>
        <div class="text-3xl md:text-4xl font-bold text-orange-600 mb-2">24/7</div>
        <div class="text-gray-600">Expert Support</div>
      </div>
    </div>
  </div>
</section>
