---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Testimonials from '../components/Testimonials.astro';
import Newsletter from '../components/Newsletter.astro';
import SubscriptionModal from '../components/SubscriptionModal.astro';
import LeadMagnet from '../components/LeadMagnet.astro';
import AffiliateBanner from '../components/AffiliateBanner.astro';

const posts = await getCollection('blog');
const latestPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 6);
---

<Layout title="AI Review Site - Expert AI Tool Reviews and Analysis">
  <!-- Hero Section -->
  <Hero 
    title="Expert AI Tool Reviews"
    subtitle="Comprehensive analysis of the latest AI tools and technologies to help you make informed decisions"
    ctaText="Explore Reviews"
    ctaLink="/blog"
    showStats={true}
  />

  <!-- Lead Magnet Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <LeadMagnet 
          title="Free AI Tools Selection Guide"
          subtitle="Download our comprehensive guide to choosing the right AI tools for your business. Includes comparison charts, pricing analysis, and implementation tips."
          features={[
            "50+ AI tools compared side-by-side",
            "Pricing analysis and ROI calculations",
            "Implementation checklists and templates",
            "Industry-specific recommendations",
            "Exclusive discount codes for top tools"
          ]}
          ctaText="Get Free Guide"
          bonusText="Bonus: Get 20% off premium AI tools with exclusive codes"
        />
      </div>
    </div>
  </section>

  <!-- Latest Articles Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Latest AI Reviews
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Stay updated with our latest comprehensive reviews of AI tools and technologies
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {latestPosts.map((post) => (
            <article class="group bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
              <div class="mb-4">
                <time class="text-sm text-gray-500">
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>
              
              <h3 class="text-xl font-semibold mb-3 group-hover:text-blue-600 transition-colors">
                <a href={`/blog/${post.slug}`}>
                  {post.data.title}
                </a>
              </h3>
              
              <p class="text-gray-600 mb-4 leading-relaxed">
                {post.data.description}
              </p>
              
              <div class="flex items-center justify-between">
                <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
                  Read Review â†’
                </a>
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </article>
          ))}
        </div>

        <div class="text-center mt-12">
          <a href="/blog" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
            View All Reviews
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Affiliate Banner Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Exclusive AI Tool Deals
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Get special discounts on the AI tools we recommend and trust
          </p>
        </div>

        <AffiliateBanner 
          toolName="Jasper AI"
          description="The #1 AI writing assistant for businesses. Create high-quality content 10x faster."
          originalPrice="$39/month"
          discountPrice="$29/month"
          discountCode="AIREVIEW20"
          affiliateLink="https://jasper.ai?ref=aireview"
          features={[
            "AI-powered content creation",
            "50+ content templates",
            "Brand voice customization",
            "SEO optimization tools",
            "Team collaboration features"
          ]}
          expiryDate="December 31, 2024"
        />

        <AffiliateBanner 
          toolName="Grammarly Premium"
          description="Advanced writing assistant with AI-powered suggestions for grammar, style, and tone."
          originalPrice="$12/month"
          discountPrice="$8/month"
          discountCode="GRAMMARLY25"
          affiliateLink="https://grammarly.com?ref=aireview"
          features={[
            "Advanced grammar checking",
            "Style and tone suggestions",
            "Plagiarism detection",
            "Writing insights",
            "Cross-platform sync"
          ]}
          expiryDate="January 15, 2025"
        />
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Browse by Category
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Find AI tools and reviews organized by category and use case
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <a href="/category/productivity" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
            <div class="text-center">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-200 transition-colors">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Productivity</h3>
              <p class="text-gray-600 text-sm">AI tools to boost your workflow</p>
            </div>
          </a>

          <a href="/category/writing" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
            <div class="text-center">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:bg-green-200 transition-colors">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Writing</h3>
              <p class="text-gray-600 text-sm">AI writing assistants and tools</p>
            </div>
          </a>

          <a href="/category/marketing" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
            <div class="text-center">
              <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-200 transition-colors">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Marketing</h3>
              <p class="text-gray-600 text-sm">AI-powered marketing solutions</p>
            </div>
          </a>

          <a href="/category/comparison" class="group p-6 bg-white rounded-lg border border-gray-200 hover:border-blue-300 transition-colors">
            <div class="text-center">
              <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-4 group-hover:bg-orange-200 transition-colors">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">Comparisons</h3>
              <p class="text-gray-600 text-sm">Head-to-head tool comparisons</p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium CTA Section -->
  <section class="py-16 bg-gradient-to-r from-purple-600 to-blue-600 text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Get Premium AI Insights
        </h2>
        <p class="text-xl opacity-90 mb-8 max-w-3xl mx-auto">
          Unlock exclusive in-depth reviews, comparison matrices, early access to new tools, and personalized recommendations.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/premium" class="bg-white text-purple-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors">
            Start Free Trial
          </a>
          <button 
            onclick="showSubscriptionModal()"
            class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-purple-600 transition-colors"
          >
            Get Free Updates
          </button>
        </div>
        <p class="text-sm opacity-75 mt-4">
          Join 10,000+ professionals getting weekly AI insights
        </p>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <Testimonials />

  <!-- Newsletter Section -->
  <Newsletter 
    title="Stay Updated"
    subtitle="Get the latest AI tool reviews and insights delivered to your inbox"
    showSocial={true}
  />

  <!-- Subscription Modal -->
  <SubscriptionModal 
    id="homepage-modal"
    title="Get Weekly AI Insights"
    subtitle="Join 10,000+ professionals getting exclusive AI tool reviews and insights every week"
    showPremium={true}
  />

  <script>
    // Show subscription modal after 30 seconds
    setTimeout(() => {
      const modal = document.getElementById('homepage-modal');
      if (modal && !localStorage.getItem('modal-shown')) {
        modal.classList.remove('hidden');
        localStorage.setItem('modal-shown', 'true');
      }
    }, 30000);

    function showSubscriptionModal() {
      const modal = document.getElementById('homepage-modal');
      modal.classList.remove('hidden');
    }

    // Show modal on scroll (when user reaches 50% of page)
    window.addEventListener('scroll', () => {
      const scrollPercent = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
      if (scrollPercent > 50 && !localStorage.getItem('scroll-modal-shown')) {
        const modal = document.getElementById('homepage-modal');
        if (modal) {
          modal.classList.remove('hidden');
          localStorage.setItem('scroll-modal-shown', 'true');
        }
      }
    });
  </script>
</Layout>
