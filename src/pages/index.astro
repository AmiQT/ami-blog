---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get the latest blog posts
const posts = await getCollection('blog');
const latestPosts = posts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<Layout title="AI Review Site - Your Source for AI Insights and Reviews">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-purple-50 py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
        Welcome to <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">AI Review Site</span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
        Your trusted source for comprehensive AI insights, detailed reviews, and cutting-edge analysis. 
        Stay ahead of the curve with our expert coverage of artificial intelligence technologies.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/blog" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105">
          Explore Articles
        </a>
        <a href="/about" class="border-2 border-blue-600 text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 hover:text-white transition-all duration-300">
          Learn More
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">What We Offer</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6 rounded-lg bg-gradient-to-br from-blue-50 to-blue-100">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-900">In-Depth Reviews</h3>
          <p class="text-gray-600">Comprehensive analysis of AI tools, platforms, and technologies with real-world testing and honest assessments.</p>
        </div>
        <div class="text-center p-6 rounded-lg bg-gradient-to-br from-purple-50 to-purple-100">
          <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-900">Latest Insights</h3>
          <p class="text-gray-600">Stay updated with the newest developments in AI, from breakthrough research to practical applications.</p>
        </div>
        <div class="text-center p-6 rounded-lg bg-gradient-to-br from-green-50 to-green-100">
          <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-900">Expert Analysis</h3>
          <p class="text-gray-600">Professional insights from AI experts and practitioners who understand the technology and its implications.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Posts Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900">Latest Articles</h2>
        <a href="/blog" class="text-blue-600 hover:text-blue-800 font-semibold transition-colors">
          View All Posts →
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {latestPosts.map((post) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                {post.data.tags.length > 0 && (
                  <span class="mx-2">•</span>
                )}
                {post.data.tags.slice(0, 2).map((tag) => (
                  <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-1">
                    {tag}
                  </span>
                ))}
              </div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900 line-clamp-2 hover:text-blue-600 transition-colors">
                <a href={`/blog/${post.slug}`}>
                  {post.data.title}
                </a>
              </h3>
              <p class="text-gray-600 mb-4 line-clamp-3">
                {post.data.description}
              </p>
              <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-semibold transition-colors">
                Read More →
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Dive Deeper?</h2>
      <p class="text-xl mb-8 opacity-90">
        Explore our comprehensive collection of AI reviews and insights to stay informed about the latest developments.
      </p>
      <a href="/blog" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
        Browse All Articles
      </a>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
