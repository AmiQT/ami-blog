---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  
  // Get unique categories from tags
  const categories = new Set<string>();
  posts.forEach(post => {
    if (post.data.tags.includes('productivity')) categories.add('productivity');
    if (post.data.tags.includes('writing')) categories.add('writing');
    if (post.data.tags.includes('marketing')) categories.add('marketing');
    if (post.data.tags.includes('comparison')) categories.add('comparison');
  });

  return Array.from(categories).map((category) => ({
    params: { category },
    props: { category }
  }));
}

const { category } = Astro.params;
const posts = await getCollection('blog');

// Filter posts by category
const categoryPosts = posts.filter(post => {
  switch (category) {
    case 'productivity':
      return post.data.tags.includes('productivity') || post.data.tags.includes('notion');
    case 'writing':
      return post.data.tags.includes('writing') || post.data.tags.includes('grammarly');
    case 'marketing':
      return post.data.tags.includes('marketing') || post.data.tags.includes('content-creation') || post.data.tags.includes('jasper');
    case 'comparison':
      return post.data.tags.includes('comparison') || post.data.tags.includes('chatgpt') || post.data.tags.includes('claude');
    default:
      return false;
  }
}).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Category metadata
const categoryMeta = {
  productivity: {
    title: 'Productivity AI Tools',
    description: 'Discover AI tools that boost your productivity and streamline your workflow',
    icon: '‚ö°'
  },
  writing: {
    title: 'Writing & Content AI Tools',
    description: 'Explore AI-powered writing assistants and content creation tools',
    icon: '‚úçÔ∏è'
  },
  marketing: {
    title: 'Marketing AI Tools',
    description: 'Find AI solutions for digital marketing and content strategy',
    icon: 'üìà'
  },
  comparison: {
    title: 'AI Tool Comparisons',
    description: 'Compare different AI tools to find the best solution for your needs',
    icon: '‚öñÔ∏è'
  }
};

const meta = categoryMeta[category as keyof typeof categoryMeta];

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Categories', href: '/search' },
  { label: meta.title }
];
---

<Layout title={meta.title} description={meta.description}>
  <section class="py-16 bg-gradient-to-r from-blue-600 to-purple-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <div class="text-6xl mb-4">{meta.icon}</div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{meta.title}</h1>
      <p class="text-xl opacity-90 max-w-3xl mx-auto">{meta.description}</p>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <Breadcrumbs items={breadcrumbItems} />
      
      <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
          {categoryPosts.length} Article{categoryPosts.length !== 1 ? 's' : ''} Found
        </h2>
        <p class="text-gray-600">
          Browse our comprehensive reviews and insights for {meta.title.toLowerCase()}
        </p>
      </div>

      {categoryPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {categoryPosts.map((post) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-3">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <span class="mx-2">‚Ä¢</span>
                  <span>{Math.ceil((post.body || '').split(' ').length / 200)} min read</span>
                </div>
                
                <h3 class="text-xl font-semibold mb-3 text-gray-900 line-clamp-2 hover:text-blue-600 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                
                <div class="flex justify-between items-center">
                  <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-semibold transition-colors">
                    Read More ‚Üí
                  </a>
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags.slice(0, 2).map((tag) => (
                      <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">No Articles Found</h3>
          <p class="text-gray-600">We're working on content for this category. Check back soon!</p>
        </div>
      )}

      <!-- Back to Categories -->
      <div class="mt-12 text-center">
        <a href="/search" class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to All Categories
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
