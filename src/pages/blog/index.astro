---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Separate free and premium posts
const freePosts = sortedPosts.filter(post => !post.data.premium);
const premiumPosts = sortedPosts.filter(post => post.data.premium);
---

<Layout 
  title="AI Tool Reviews & Analysis - Expert Insights"
  description="Comprehensive AI tool reviews, comparisons, and analysis. Find the perfect AI solutions for your needs with expert insights and real-world testing."
  type="website"
>
  <!-- Hero Section -->
  <section class="py-16 bg-white border-b border-gray-200">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          AI Tool Reviews & Analysis
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
          Expert insights, comprehensive comparisons, and real-world testing to help you choose the perfect AI tools for your needs.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/search" class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
            Search Tools
          </a>
          <a href="/premium" class="border-2 border-blue-600 text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
            Get Premium Access
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Free Articles Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Latest Reviews</h2>
          <p class="text-gray-600">Free access to our expert AI tool reviews and comparisons</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {freePosts.map((post) => (
            <article class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
              {post.data.heroImage && (
                <img 
                  src={post.data.heroImage} 
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  {post.data.category && (
                    <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full font-medium">
                      {post.data.category}
                    </span>
                  )}
                  <span class="text-sm text-gray-500">
                    {post.data.pubDate.toLocaleDateString()}
                  </span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition-colors">
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.data.description}
                </p>
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs text-gray-500">#{tag}</span>
                    ))}
                  </div>
                  <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-700 font-medium text-sm">
                    Read Review â†’
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Articles Preview Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Premium Content</h2>
          <p class="text-gray-600 mb-6">Exclusive in-depth analysis and advanced comparisons</p>
          <a href="/premium" class="inline-block bg-gradient-to-r from-purple-600 to-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:from-purple-700 hover:to-blue-700 transition-all">
            Start Free Trial
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {premiumPosts.slice(0, 3).map((post) => (
            <article class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow relative">
              <div class="absolute top-4 right-4">
                <span class="bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded-full font-medium">
                  Premium
                </span>
              </div>
              {post.data.heroImage && (
                <img 
                  src={post.data.heroImage} 
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  {post.data.category && (
                    <span class="bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded-full font-medium">
                      {post.data.category}
                    </span>
                  )}
                  <span class="text-sm text-gray-500">
                    {post.data.pubDate.toLocaleDateString()}
                  </span>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  {post.data.title}
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {post.data.excerpt || post.data.description}
                </p>
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-1">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs text-gray-500">#{tag}</span>
                    ))}
                  </div>
                  <span class="text-purple-600 font-medium text-sm">
                    Premium Access
                  </span>
                </div>
              </div>
            </article>
          ))}
        </div>

        <div class="text-center mt-12">
          <p class="text-gray-600 mb-4">
            Get access to {premiumPosts.length}+ premium articles with detailed analysis, benchmarks, and expert insights
          </p>
          <a href="/premium" class="inline-block bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
            View All Premium Content
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Browse by Category</h2>
          <p class="text-gray-600">Find AI tools for your specific needs</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <a href="/category/productivity" class="bg-blue-50 p-6 rounded-lg text-center hover:bg-blue-100 transition-colors">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Productivity</h3>
            <p class="text-sm text-gray-600">Work smarter, not harder</p>
          </a>

          <a href="/category/writing" class="bg-green-50 p-6 rounded-lg text-center hover:bg-green-100 transition-colors">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Writing</h3>
            <p class="text-sm text-gray-600">Create compelling content</p>
          </a>

          <a href="/category/marketing" class="bg-purple-50 p-6 rounded-lg text-center hover:bg-purple-100 transition-colors">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Marketing</h3>
            <p class="text-sm text-gray-600">Grow your business</p>
          </a>

          <a href="/category/comparison" class="bg-orange-50 p-6 rounded-lg text-center hover:bg-orange-100 transition-colors">
            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 mb-2">Comparisons</h3>
            <p class="text-sm text-gray-600">Side-by-side analysis</p>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
