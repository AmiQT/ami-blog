    background-color: transparent;
    padding: 0;
    color: inherit;
  }
  
  .prose a {
    color: #3b82f6;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #1d4ed8;
  }
  
  .prose strong {
    font-weight: 600;
    color: #111827;
  }
  
  .prose em {
    font-style: italic;
  }
  
  .prose hr {
    border: none;
    border-top: 1px solid #e5e7eb;
    margin: 2rem 0;
  }
</style>
